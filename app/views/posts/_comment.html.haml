- if current_user
  .comment-input
    = form_with( url: post_comments_path(post_id: params[:id]), local: true ) do |f|
      .field
      = f.text_area :text, class: "form-control", placeholder: "コメントする", rows: "3"
      .action
      = f.submit "送信する", class: "btn btn-primary"
- @comments.each do |comment|
  .comment.clearfix
    .profile
      - if comment.user.image.blank?
        .image
          %i.fas.fa-user-alt.fa-lg
      - else
        = image_tag comment.user.image.to_s, class: "img"
    .contents
      .username
        = comment.user.name
      .message-body
        = comment.text
