.wrapper
  #carousel-2.carousel.slide{"data-interval" => "5000"}
    %ol.carousel-indicators
      %li.active{"data-slide-to" => "0", "data-target" => "#carousel-2"}
      %li{"data-slide-to" => "1", "data-target" => "#carousel-2"}
      %li{"data-slide-to" => "2", "data-target" => "#carousel-2"}
    .carousel-inner
      %p.title MyLandscape
      %p.introduction= t("top.catchphrase")
      = form_for(resource, as: resource_name, url: session_path(resource_name), class: "login") do |f|
        = f.email_field :email, value: "test@mail.com", class: "email-field"
        = f.password_field :password, value: "test123", class: "password-field"
        = f.submit t("top.easy_log_in"), class: "btn", role: "button"
      .carousel-item.active
        = image_tag('first-slide.jpg', class: "d-block w-100", alt: "First slide")
      .carousel-item
        = image_tag('second-slide.jpg', class: "d-block w-100", alt: "Second slide")
      .carousel-item
        = image_tag('third-slide.jpg', class: "d-block w-100", alt: "Second slide")
    %a.carousel-control-prev{"data-slide" => "prev", href: "#carousel-2", role: "button"}
      %span.carousel-control-prev-icon{"aria-hidden" => "true"}
      %span.sr-only Previous
    %a.carousel-control-next{"data-slide" => "next", href: "#carousel-2", role: "button"}
      %span.carousel-control-next-icon{"aria-hidden" => "true"}
      %span.sr-only Next

  .about
    .about__inner
      %p.about__inner--title= t("top.what_is")
      %p.about__inner--description= t("top.desc1")
      = t("top.desc2")

  .row
    .col-lg-4
      %i.fas.fa-map-marked-alt.fa-5x
      %h2= t("top.map_title")
      %p= t("top.map_desc")
    .col-lg-4
      %i.fas.fa-comments.fa-5x
      %h2= t("top.comment_title")
      %p= t("top.comment_desc")
    .col-lg-4
      %i.fas.fa-heart.fa-5x
      %h2= t("top.favorite_title")
      %p= t("top.favorite_desc")
  .buttons
    %p
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = f.email_field :email, value: "test@mail.com", class: "email-field"
        = f.password_field :password, value: "test123", class: "password-field"
        = f.submit t("top.easy_log_in"), class: "btn easy-login", role: "button"
    %p.registration
      = link_to t("top.sign_up"), new_user_registration_path, class: "btn register", role: "button"
    %p.login
      = link_to t("top.log_in"), user_session_path, class: "btn login", role: "button"
