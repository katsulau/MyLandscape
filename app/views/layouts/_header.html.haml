%nav.navbar.navbar-expand-lg.navbar-dark{style: "background-color: rgb(0, 0, 0);"}
  .mountain
    .mountain1
  = link_to "MyLandscape", root_path, class: "navbar-brand"
  .navbar-collapse.collapse.w-100.order-3.dual-collapse2
    %ul.navbar-nav.ml-auto
      - if user_signed_in?
        %li.nav-item
          = link_to t("header.post"), new_post_path, class: "btn post", role: "button", data: {"turbolinks"=>false}
        %li.nav-item
          = link_to t("header.post_list"), posts_path, class: "nav-link"
        %li.nav-item
          .profile
            - if current_user.image.blank?
              .profile__defaultImage
                %i.fas.fa-user-alt.fa-lg
            - else
              = image_tag current_user.image.to_s, class: "profile__image"
        %li.nav-item.dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            = t("header.mypage")
          .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
            = link_to t("header.mypage"), user_path(current_user), class: "dropdown-item"
            = link_to t("header.log_out"), destroy_user_session_path, class: "dropdown-item", method: :delete
        %li.nav-item.dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            = t("header.language")
          .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
            %a.dropdown-item{:href => "/ja"} 日本語
            %a.dropdown-item{:href => "/en"} English
            %a.dropdown-item{:href => "/es"} Español
      - else
        %li.nav-item
          = link_to t("header.sign_up"), new_user_registration_path, class: "btn register", role: "button", data: {"turbolinks"=>false}
        %li.nav-item
          = link_to t("header.log_in"), user_session_path, class: "btn login", role: "button"
        %li.nav-item
          = link_to t("header.post_list"), posts_path, class: "nav-link"
        %li.nav-item.dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            = t("header.language")
          .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
            %a.dropdown-item{:href => "/ja"} 日本語
            %a.dropdown-item{:href => "/en"} English
            %a.dropdown-item{:href => "/es"} Español